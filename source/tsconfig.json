{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"strict": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"sourceRoot": "../source",
		"outDir": "../build/"
	},
	"files": [
		"index.ts",
		"index.test.ts"
	]
}
