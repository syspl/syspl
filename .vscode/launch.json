{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "build",
			"program": "${workspaceRoot}/build/index.js",
			"args": [
				"build",
				"${workspaceRoot}/example"
			],
			"protocol": "inspector",
			"preLaunchTask": "build",
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/build/**/*.js" ]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "json",
			"program": "${workspaceRoot}/build/index.js",
			"args": [ "json", "${workspaceRoot}/example/function.syspl" ],
			"protocol": "inspector",
			"preLaunchTask": "build",
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/build/**/*.js" ]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "unit tests",
			"program": "${workspaceRoot}/build/index.test.js",
			"args": [ "debug" ],
			"protocol": "inspector",
			"preLaunchTask": "build",
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/build/**/*.js" ]
		}
	]
}